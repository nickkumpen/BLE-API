{% extends '::base.html.twig' %}

{% block title %}
    <title>Warehouses</title>
{% endblock %}

{% block body %}
    <h1>Warehouses</h1>
    {% block table %}
<div class="row">
    <div class="col-md-12">
        <table class="table">
            <thead>
                <tr>
                    <th>Car</th>
                    <th>NumberPlate</th>
                    <th>Amount of products</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for warehouse in warehouses %}
                    <tr>
                        <td>{{ warehouse.name}} </td>
                        <td><a href="{{ path('warehouse_edit',{'id':warehouse.id}) }}">{{ warehouse.id }}</a></td>
                        <td>{{ warehouse.products.count }}</td>
                        <td><a href="{{ path('warehouse_edit',{'id':warehouse.id}) }}"><span class="glyphicon glyphicon-wrench" aria-hidden=true></span></a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
    {% endblock %}
    <br/>

    <a href="{{ path('warehouse_add') }}" class="btn btn-lg btn-info">add new warehouse</a>
{% endblock %}