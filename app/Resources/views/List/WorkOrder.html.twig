<head>
    <style>
        table {
            width:100%;
        }
        table, th, td {
            border: 1px solid black;
            border-collapse: collapse;
        }
        th, td {
            padding: 5px;
            text-align: left;
        }
        table#t01 tr:nth-child(even) {
            background-color: #eee;
        }
        table#t01 tr:nth-child(odd) {
            background-color:#fff;
        }
        table#t01 th {
            background-color: black;
            color: white;
        }
    </style>
</head>
<body>
<table id="t01">
    <tr>
        <th>Description</th>
        <th>Start</th>
        <th>End</th>
        <th>Address</th>
    </tr>
    {% for workorder in workorders %}
    <tr>
        <td>{{ workorder.description }}</td>
        <td>{{ workorder.start|date('d/m/Y') }}</td>
        <td>{{ workorder.end|date('d/m/Y') }}</td>
        <td>{{ workorder.job.address }}</td>
    </tr>
    {% endfor %}

</table>

</body>
