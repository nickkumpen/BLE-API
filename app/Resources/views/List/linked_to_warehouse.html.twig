<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <title>{% block title %}Products!{% endblock %}</title>
    {% block stylesheets %}{% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    <style>
        table {
            width:%;
        }
        table, th, td {
            border: 1px solid black;
            border-collapse: collapse;
        }
        th, td {
            padding: 5px;
            text-align: left;
        }
        table#t01 tr:nth-child(even) {
            background-color: #eee;
        }
        table#t01 tr:nth-child(odd) {
            background-color:#fff;
        }
        table#t01 th	{
            background-color: black;
            color: white;
        }
    </style>
</head>
<body>
{% block body %}
    <a href="{{ path('login') }}">Login</a><br/>
    <a href="{{ path('product_list') }}">Products</a><br/>
    <a href="{{ path('warehouse_list') }}">Warehouses</a><br/>
    <a href="{{ path('user_registration') }}">Register</a><br/>

    <table id="t01">
        <tr>
            <th>Datum</th>
            <th>Warehouse</th>
        </tr>
        {% for Warehouse in linked %}
            <tr>
                <td>{{ Warehouse.products }}</td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}
{% block javascripts %}{% endblock %}
</body>
</html>
