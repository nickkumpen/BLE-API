{% extends '::base.html.twig' %}

{% block title %}
    <title>Orders</title>
{% endblock %}




{% block body %}
    <h1>Orders</h1>
    {% block table %}
        <div class="row">
            <div class="col-md-12">
                <table class="table">
                    <thead>
                    <tr>
                        <th>Order Name</th>
                        <th>Order Description</th>
                        <th>Start Date</th>
                        <th>End Date</th>
                        <th>Date Created</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for order in workorders %}
                        <tr>
                            <td>{{ workorders.name }}</td>
                            <td>{{ workorders.description }}</td>
                            <td>{{ workorders.start|date('d/m/Y') }}</td>
                            <td>{{ workorders.end|date('d/m/Y') }}</td>
                            <td>{{ workorders.created|date('d/m/Y H:i:s') }}</td>
                            <td><a href="{{ path('order_edit',{'id':workorders.id}) }}"><span class="glyphicon glyphicon-wrench" aria-hidden=true></span></a>
                                &nbsp;&nbsp;&nbsp;&nbsp;<a href="{{ path('order_drop',{'id':workorders.id}) }}"><span class="glyphicon glyphicon-remove" aria-hidden=true></span></a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    {% endblock %}
    <a href="{{ path('order_add') }}" class="btn btn-lg btn-info">add new order</a>

{% endblock %}
